<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondContentFragment">

    <TextView
        android:id="@+id/secondContentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Content"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/secondContentButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <Button
        android:id="@+id/secondContentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Second Content Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/secondContentText" />

</androidx.constraintlayout.widget.ConstraintLayout>